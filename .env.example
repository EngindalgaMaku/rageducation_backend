# Ollama API Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_GENERATION_MODEL=qwen2.5:14b

# GPU Optimization
OLLAMA_NUM_GPU=1
OLLAMA_GPU_LAYERS=-1
OLLAMA_LOAD_TIMEOUT=300
OLLAMA_REQUEST_TIMEOUT=120

# Performance Settings
TEMPERATURE=0.7
MAX_TOKENS=512
TOP_K=40
TOP_P=0.9
REPEAT_PENALTY=1.1

# Concurrency Settings
MAX_CONCURRENT_REQUESTS=3
EMBEDDING_BATCH_SIZE=10

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600

# Model Cache Settings - CRITICAL FOR PERFORMANCE
MARKER_CACHE_DIR=/app/models
MARKER_MAX_MEMORY_MB=3500
MARKER_TIMEOUT_SECONDS=900
MARKER_MAX_PAGES=200
MARKER_ENABLE_RESOURCE_MONITORING=false

# Marker PDF Optimization
MARKER_DISABLE_GEMINI=true
MARKER_USE_LOCAL_ONLY=true
MARKER_DISABLE_CLOUD_SERVICES=true
MARKER_DISABLE_ALL_LLM=true
MARKER_OCR_ONLY=true